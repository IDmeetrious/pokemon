<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Pokemon" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/grey_800</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red_700</item>
        <item name="colorSecondaryVariant">@color/grey_800</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.Menu" parent="Theme.Pokemon">
        <item name="android:orientation">vertical</item>
        <item name="android:paddingStart">@dimen/layout_padding_horizontal_32</item>
        <item name="android:paddingEnd">@dimen/layout_padding_horizontal_32</item>
        <item name="android:layout_marginStart">@dimen/layout_padding_vertical_8</item>
        <item name="android:layout_marginEnd">@dimen/layout_padding_vertical_8</item>
        <item name="android:background">@drawable/rounded_box_border_solid</item>
    </style>
    <style name="Widget.Menu.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/red_700</item>
        <item name="android:textSize">@dimen/menu_button_text</item>
    </style>
    <style name="Widget.Menu.TextView.White" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/menu_title_textview</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingBottom">@dimen/layout_padding_horizontal_32</item>
    </style>
    <style name="Widget.Search.EditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:background">@drawable/rounded_text_field</item>
        <item name="paddingStart">@dimen/text_field_padding_horizontal</item>
        <item name="android:textSize">@dimen/text_content</item>
    </style>
    <style name="Theme.Search.ItemView" parent="Theme.Pokemon">
        <item name="android:background">@drawable/rounded_box_border</item>
        <item name="android:padding">@dimen/layout_padding_vertical_16</item>
    </style>
    <style name="Widget.Search.TextView.Title" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/menu_title_textview</item>
        <item name="android:textColor">@color/grey_800</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Widget.Search.TextView.Static" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/text_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Widget.Search.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">@dimen/text_content</item>
    </style>
    <style name="Widget.Search.Item.ImageView" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">88dp</item>
        <item name="android:layout_height">88dp</item>
    </style>
    <style name="Widget.Favorite.Button" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/menu_button_text</item>
    </style>
</resources>