<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Pokemon" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/grey_800</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red_700</item>
        <item name="colorSecondaryVariant">@color/grey_800</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.Intro.Menu" parent="Theme.Pokemon">
        <item name="android:orientation">vertical</item>
        <item name="android:paddingStart">@dimen/layout_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/layout_padding_horizontal</item>
        <item name="android:background">@drawable/rounded_box_border</item>
    </style>
    <style name="Widget.Pokemon.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/red_700</item>
        <item name="android:textSize">@dimen/menu_button_text</item>
    </style>
    <style name="Widget.Pokemon.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/menu_title_textview</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingBottom">@dimen/layout_padding_horizontal</item>
    </style>
</resources>